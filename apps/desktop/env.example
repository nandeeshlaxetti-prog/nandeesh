# Desktop App Environment Variables
# Copy to .env in apps/desktop/

# Application Mode
APP_MODE=desktop

# Desktop Runtime
DESKTOP_RUNTIME=electron

# Queue Backend
QUEUE_BACKEND=local

# Data Directory (optional - defaults to OS appdata)
# DATA_DIR=C:\Users\YourName\AppData\Roaming\LNN Legal Desktop

# Database
DATABASE_URL=file:./database.db

# Node Environment
NODE_ENV=development

# Logging
LOG_LEVEL=debug

# API Configuration
API_HOST=localhost
API_PORT=3000
